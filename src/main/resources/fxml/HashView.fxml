<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" style="-fx-pref-height: 36em; -fx-pref-width: 60em;" xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="16.0" prefHeight="40.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <TableView fx:id="_resultTable" onDragDropped="#handleResultTableOnDragDropped" onDragOver="#handleResultTableOnDragOver" tableMenuButtonVisible="true" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="_fileNameColumn" editable="false" prefWidth="75.0" text="%fileName.text" />
          <TableColumn fx:id="_filePathColumn" editable="false" prefWidth="240.0" text="%filePath.text" />
            <TableColumn fx:id="_hashValueColumn" editable="false" prefWidth="400.0" sortable="false" text="%hashValue.text" />
        </columns>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
      </TableView>
      <AnchorPane GridPane.rowIndex="1">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="8.0" AnchorPane.bottomAnchor="12.0" AnchorPane.leftAnchor="8.0">
               <children>
                  <CheckBox fx:id="_appendFilesCheckBox" mnemonicParsing="false" text="%appendFiles.text" />
                  <CheckBox fx:id="_lowerCaseCheckBox" mnemonicParsing="false" onAction="#handleLowerCaseCheckBoxAction" text="%lowerCase.text" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="8.0" AnchorPane.bottomAnchor="6.0" AnchorPane.rightAnchor="8.0">
               <children>
                  <ComboBox fx:id="_algorithmComboBox" onAction="#handleAlgorithmComboBoxAction" prefWidth="150.0">
                     <HBox.margin>
                        <Insets right="8.0" />
                     </HBox.margin>
                  </ComboBox>
                  <Button fx:id="_addFilesButton" minWidth="100.0" mnemonicParsing="false" onAction="#handleAddFilesButtonAction" text="%addFiles.text">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </Button>
                  <Button fx:id="_closeButton" minWidth="100.0" mnemonicParsing="false" onAction="#handleCloseButtonAction" text="%close.text">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </Button>
               </children>
            </HBox>
         </children>
      </AnchorPane>
   </children>
</GridPane>
